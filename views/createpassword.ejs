<link rel="stylesheet" href="/css/style.css">

<div style="background-image: linear-gradient(135deg, #c1f7e4 0%, #c4f8f9 100%);
height: 100vh; width: 100vw;" >
    <h1 style="text-align: center;">RESET PASSWORD</h1>
<form action="/users/updatepassword" method="post">
    <input type="password" name="password" placeholder="password" required >
    <input type="password" name="confirm_password" placeholder="confirm_password" required>
    <input type="email" name="email" value="<%= email %>" hidden>
    <input style="width: 100%;
	padding: 10px;
	margin-top: 20px;
	background-color: #58b85b;
	color: #fff;
	font-weight: bold;
	border: none;
	border-radius: 5px;
	cursor: pointer;" type="submit" value="Update">
</form>
</div>